rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null
        && firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    match /booking_photos/{bookingKey}/{fileName} {
      allow write: if true;
      allow read: if isAdmin();
    }
  }
}
